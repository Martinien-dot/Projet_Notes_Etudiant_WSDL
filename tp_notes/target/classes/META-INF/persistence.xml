<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0" xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
    
    <persistence-unit name="etudiant_pu" transaction-type="RESOURCE_LOCAL">
        <description>PostgreSQL Persistence Unit for Etudiant</description>
        
        <class>com.martinien.tp_notes_serveur.Etudiant</class>
        
        <properties>
            <!-- Database connection settings -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5433/etudiant_notes_db"/>
            <property name="jakarta.persistence.jdbc.user" value="etudiant_notes_user"/>
            <property name="jakarta.persistence.jdbc.password" value="etudiant_notes_password"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            
            <!-- Hibernate properties -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>